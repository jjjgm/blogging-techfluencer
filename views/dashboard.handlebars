<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Post Something new:</h3>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>


      <div class="form-group">
        <label for="post-content">Post:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
    
  </div>



{{!-- YOUR DISPLAYED POSTS --}}
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Your Posts</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        {{!-- check posts link --}}
        <h4><a href="post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
      {{/each}}
    </div>
  {{/if}}
</div>
</div>


{{!-- USER COMMENTS --}}
  {{#if comments.length}}
  <div class="col-md-6 comments-list">
    <h3>Your Comments</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="comment/{{comment.id}}">{{comment.input}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>


<script src="./js/dashboard.js"></script>