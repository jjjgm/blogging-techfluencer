<div class="container">
  <div class="row">
    <div class="col-auto text-center">
      <h1>Welcome, {{username}}!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-auto">
      <h4>Post Something New:</h4>
      <form class="form new-post-form">
        <div class="form-group">
          <label for="post-title">Post Title:</label>
          <input class="form-input" type="text" id="post-title" name="post-title" />
        </div>
        <div class="form-group">
          <label for="post-content">Post:</label>
          <textarea class="form-input" id="post-content" name="post-content"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
  </div>

  <div class="row my-2">
    <div class=" col-md-6">
      <h3>Your Posts</h3>
      {{#if posts.length}}
      <div class="post-list">
        {{#each posts as |post|}}
        <div class="row mb-2">
          <div class="col-8">
            <h4><a href="post/{{post.id}}">{{post.title}}</a></h4>
          </div>
          <div class="col-4">
            <button class="btn btn-sm btn-primary" data-id="{{post.id}}">DELETE</button>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>

    <div class=" col-md-6">
      <h3>Your Comments</h3>
      {{#if comments.length}}
      <div class="comments-list">
        {{#each comments as |comment|}}
        <div class="row mb-2">
          <div class="col-8">
            <h4><a class="disabled" href="comment/{{comment.id}}" onclick="return false;">{{comment.input}}</a></h4>
          </div>
          <div class="col-4">
            <button class="btn btn-sm btn-primary" comment-data-id="{{comment.id}}">DELETE</button>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
</div>



<script src="./js/dashboard.js"></script>