{{!-- Post --}}
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Written by {{user.username}} on {{format_date created_at}}</p>
  {{!-- <p>
    <button class="btn btn-primary">Post</button>
  </p> --}}


{{!-- COMMENT FORM --}}
{{#if logged_in}}
<form class="new-comment-form">
<div class="text-center">
  <div class="form-group">
    <label for="comment-text">comment:</label>
    <textarea class="form-input" id="comment-input" name="comment-input"></textarea>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">comment</button>
      </div>
  </div>
  </form>
  {{else}}
  <p>Please login or sign-up to add a comment!</p>
  {{/if}}



{{!-- DISPLAY COMMENTS FOR POST --}}
  {{#each comments as |comment| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/comments/{{comment.id}}">{{input}}</a>
    </h2>
    <p>Commented: {{user.username}} on {{ format_date comment.created_at}}</p>
  </div>
</div>
{{/each}}

<script src="../js/post.js"></script>
