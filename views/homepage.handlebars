<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>Created by {{post.user.name}} on {{ post.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.title}}
    </p>
  </div>
</div>
{{/each}}